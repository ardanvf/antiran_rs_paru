<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#A2D2FF"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/l2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="bottom"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                tools:ignore="ContentDescription,MissingConstraints"
                tools:layout_editor_absoluteX="105dp"
                tools:layout_editor_absoluteY="76dp"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:src="@mipmap/ic_rsparu" />

            <TextView
                android:id="@+id/tvWelcome"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="85dp"
                tools:layout_editor_absoluteY="267dp"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="@string/selamat_datang_di_rs_paru_jember"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/tvBpjs"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="26dp"
                tools:layout_editor_absoluteY="405dp"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:text="@string/a1"
                android:textAlignment="center"
                android:textColor="#808080"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/tvUmum"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="235dp"
                tools:layout_editor_absoluteY="405dp"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:text="@string/b1"
                android:textAlignment="center"
                android:textColor="#808080"
                android:textSize="40sp" />

            <Button
                android:id="@+id/btnBpjs"
                android:layout_width="150dp"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:layout_marginTop="248dp"
                android:backgroundTint="#4CC552"
                android:text="@string/bpjs"
                android:textColor="#ffffff"
                android:textSize="35sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView" />

            <Button
                android:id="@+id/btnUmum"
                android:layout_width="150dp"
                android:layout_height="75dp"
                android:backgroundTint="#B0BF1A"
                android:text="@string/umum"
                android:textColor="#ffff"
                android:textSize="30sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.7"
                app:layout_constraintStart_toEndOf="@+id/btnBpjs"
                app:layout_constraintTop_toTopOf="@+id/btnBpjs" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/Scan"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="39dp"
                android:layout_weight="1"
                android:background="#438D80"
                android:paddingStart="10dp"
                android:paddingTop="3dp"
                android:paddingEnd="34dp"
                android:paddingBottom="3dp"
                android:text="@string/sambungkan_bluetooth"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/CopyRight"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="852dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="#2B547E"
                android:paddingStart="10dp"
                android:paddingEnd="5dp"
                android:text="Develope By"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/iv_polije"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="135dp"
                tools:layout_editor_absoluteY="856dp"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:contentDescription="@string/todo"
                android:src="@mipmap/ic_polije" />

            <ImageView
                android:id="@+id/iv_polijeNew"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="170dp"
                tools:layout_editor_absoluteY="856dp"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:contentDescription="@string/todo"
                android:src="@mipmap/ic_polije_new" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>